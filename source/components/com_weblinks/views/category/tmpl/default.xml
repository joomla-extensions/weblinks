<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="com_weblinks_category_view_default_title" option="com_weblinks_category_view_default_option">
		<help
			key="JHELP_MENUS_MENU_ITEM_WEBLINK_CATEGORY"
